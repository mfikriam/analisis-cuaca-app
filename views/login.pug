doctype html
head
  meta(charset='utf-8')
  meta(content='width=device-width, initial-scale=1.0' name='viewport')
  title= title
  include _link

body
  main
    .container
      section.section.register.min-vh-100.d-flex.flex-column.align-items-center.justify-content-center.py-4
        .container
          .row.justify-content-center
            .col-lg-4.col-md-6.d-flex.flex-column.align-items-center.justify-content-center
              .d-flex.justify-content-center.py-4
                a.logo.d-flex.align-items-center.w-auto
                  img(src='/assets/img/logo.png' alt='')
                  span.d-none.d-lg-block AnalisisCuaca
              // End Logo
              .card.mb-3
                .card-body
                  .pt-4.pb-2
                    h5.card-title.text-center.pb-0.fs-4 Login to Your Account
                    p.text-center.small Enter your email &amp; password to login
                  form.row.g-3.needs-validation(novalidate='')
                    .col-12
                      label.form-label(for='yourEmail') Your Email
                      input#yourEmail.form-control(type='email' name='email' required='')
                      .invalid-feedback Please enter a valid Email adddress!
                    .col-12
                      label.form-label(for='yourPassword') Password
                      input#yourPassword.form-control(type='password' name='password' required='')
                      .invalid-feedback Please enter your password!
                    .col-12
                      button.btn.btn-primary.w-100(type='submit') Login
                    .col-12
                      p.small.mb-0 Don&apos;t have an account? Contact the admin
  // Scroll up
  a.back-to-top.d-flex.align-items-center.justify-content-center(href='#')
    i.bi.bi-arrow-up-short
  include _script
