// ======= Header =======
header#header.header.fixed-top.d-flex.align-items-center
  .d-flex.align-items-center.justify-content-between
    a.logo.d-flex.align-items-center(href='/dashboard')
      img(src='/img/logo.png' alt='Logo')
      span.d-none.d-lg-block AnalisisCuaca
    i.bi.bi-list.toggle-sidebar-btn
  // End Logo
  nav.header-nav.ms-auto
    ul.d-flex.align-items-center
      li.nav-item.dropdown.pe-3
        a.nav-link.nav-profile.d-flex.align-items-center.pe-0(href='#' data-bs-toggle='dropdown')
          img.rounded-circle(src='/img/profile-img.jpg' alt='Profile')
          span.d-none.d-md-block.dropdown-toggle.ps-2= user.fullname
        // End Profile Iamge Icon
        ul.dropdown-menu.dropdown-menu-end.dropdown-menu-arrow.profile
          li.dropdown-header
            h6= user.email
            span= user.role
          li
            hr.dropdown-divider
          li
            a.dropdown-item.d-flex.align-items-center.btn--logout(style='cursor: pointer;')
              i.bi.bi-box-arrow-right
              span Sign Out
        // End Profile Dropdown Items
      // End Profile Nav
  // End Icons Navigation
// End Header
