mixin addNewDataModal()
  #modal-add-obj.modal.fade(data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-hidden='true')
    .modal-dialog.modal-dialog-scrollable
      .modal-content
        .modal-header
          - const capitalModelName = modelName.charAt(0).toUpperCase() + modelName.slice(1);
          h1.modal-title.fs-4= `Add New Data ${capitalModelName}`
          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body
          form.row(id=`form-add-${modelName}` novalidate)
            .col-12
              input#add-user_id(type='hidden' name='user_id' value=local_user.id)
            .col-12.mb-3
              label.form-label(for='tanggal') Tanggal (Only Month & Year)
              input#add-tanggal.form-control(type='month' name='tanggal' required)
              .invalid-feedback Please enter a valid date
            .col-12.mb-3
              label.form-label(for='jum_kecelakaan') Jumlah Kecelakaan
              input#add-jum_kecelakaan.form-control(type='number' name='jum_kecelakaan' min='0' required)
              .invalid-feedback Jumlah kecelakaan minimum 0
        .modal-footer
          button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cancel
          button.btn.btn-primary(id=`btn-submit-${modelName}` type='submit' form=`form-add-${modelName}`) Submit

mixin updateDataModals(obj)
  .modal.fade(id=`modal-update-obj-${obj.id}` data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-hidden='true')
    .modal-dialog.modal-dialog-scrollable
      .modal-content
        .modal-header
          - const capitalModelName = modelName.charAt(0).toUpperCase() + modelName.slice(1);
          h1.modal-title.fs-4= `Update ${capitalModelName} ${obj.tanggal}`
          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body
          form.row(id=`form-update-${modelName}-${obj.id}` novalidate data-obj-id=obj.id)
            .col-12.mb-3
              - const date = new Date(obj.tanggal);
              - const year = date.getFullYear();
              - const month = (date.getMonth() + 1).toString().padStart(2, '0');
              - const formattedTanggal = `${year}-${month}`;
            
              label.form-label(for='tanggal') Tanggal (Only Month & Year)
              input.form-control(id=`update-tanggal-${obj.id}` value=formattedTanggal type='month' name='tanggal' required)
              .invalid-feedback Please enter a valid date
            .col-12.mb-3
              label.form-label(for='jum_kecelakaan') Jumlah Kecelakaan
              input.form-control(id=`update-jum_kecelakaan-${obj.id}` value=obj.jum_kecelakaan type='number' name='jum_kecelakaan' min='0' required)
              .invalid-feedback Jumlah kecelakaan minimum 0
        .modal-footer
          button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cancel
          button.btn.btn-info(class=`btn-update-${modelName}` type='submit' form=`form-update-${modelName}-${obj.id}`) Update

mixin delDataModals(objId, objUnique)
  .modal.fade(id=`modal-delete-obj-${objId}` data-bs-backdrop='static' data-bs-keyboard='false' tabindex='-1' aria-hidden='true')
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          h1.modal-title.fs-4 Delete Confirmation
          button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
        .modal-body= `Are you sure you want to delete ${modelName}: `
          span.fw-bold= objUnique
        .modal-footer
          button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Cancel
          button.btn.btn-danger(class=`btn-del-${modelName}` type='button' data-obj-id=objId) Delete

